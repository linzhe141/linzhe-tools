{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": "."
  }
}
