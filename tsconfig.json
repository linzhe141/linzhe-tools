{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@linzhe-tools/*": ["packages/*"],
      "linzhe-tools": ["packages/linzhe-tools/index.ts"],
      "linzhe-tools/style.css": ["packages/linzhe-tools/dist/style/style.css"]
    }
  },
  "exclude": ["script/*/*"]
}
