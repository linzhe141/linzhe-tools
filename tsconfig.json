{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "types": [],
    "paths": {
      "@linzhe_tools/*": ["packages/*"]
    }
  }
}
