{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "target": "ESNext",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@linzhe_tools/*": ["packages/*"]
    }
  },
  "exclude": ["script/*/*"]
}
